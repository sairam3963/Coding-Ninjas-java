import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int ch = sc.nextInt();
		int i = 1;
		if (ch == 1) {
			int sum = 0;
			while (i <= n) {
				sum = sum + i;
				i++;
			}
			System.out.println(sum);
		} else if (ch == 2) {
			int sum = 1;
			while (i <= n) {
				sum = sum * i;
				i++;
			}
			System.out.println(sum);
		} else {
			System.out.println(-1);
		}

	}

}
